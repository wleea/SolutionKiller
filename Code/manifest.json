  {
    "manifest_version": 3,
    "name": "题解杀手",
    "version": "1.0",
    "description": "专为OI玩家设计，自动退出题解。",
    "permissions": ["tabs", "activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.luogu.com.cn/problem/solution/*",
                "*://*/p/*/solution"
            ],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}